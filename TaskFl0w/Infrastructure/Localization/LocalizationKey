// Ключи для локализации

enum LocalizationKey {
    // Навигация
    enum Navigation {
        static let settings = "navigation.settings"
        static let back = "navigation.back"
        static let done = "navigation.done"
    }
    
    // Настройки
    enum Settings {
        static let notifications = "settings.notifications"
        static let tasks = "settings.tasks"
        static let watchFaceLibrary = "settings.watchFaceLibrary"
        static let watchFace = "settings.watchFace"
        static let categories = "settings.categories"
    }
    
    // Уведомления
    enum Notifications {
        static let title = "notifications.title"
        static let reminderTime = "notifications.reminderTime"
        static let footer = "notifications.footer"
        
        enum Time {
            static let oneMinute = "notifications.time.oneMinute"
            static let fiveMinutes = "notifications.time.fiveMinutes"
            static let tenMinutes = "notifications.time.tenMinutes"
            static let fifteenMinutes = "notifications.time.fifteenMinutes"
            static let thirtyMinutes = "notifications.time.thirtyMinutes"
            static let oneHour = "notifications.time.oneHour"
        }
        
        enum Testing {
            static let title = "notifications.testing.title"
            static let testButton = "notifications.testing.testButton"
        }
        
        enum Alert {
            static let title = "notifications.alert.title"
            static let settings = "notifications.alert.settings"
            static let cancel = "notifications.alert.cancel"
            static let message = "notifications.alert.message"
        }
    }
    
    // Настройки задач
    enum SettingsTask {
        static let moveUnfinished = "settingsTask.moveUnfinished"
        static let increasePriority = "settingsTask.increasePriority"
        static let priorityFrequency = "settingsTask.priorityFrequency"
        static let sectionHeader = "settingsTask.sectionHeader"
        static let sectionFooter = "settingsTask.sectionFooter"
        static let navTitle = "settingsTask.navTitle"
        static let frequencyEveryDay = "settingsTask.frequencyEveryDay"
        static let frequencyEveryTwoDays = "settingsTask.frequencyEveryTwoDays"
        static let frequencyEveryThreeDays = "settingsTask.frequencyEveryThreeDays"
    }
    
    enum CategoryEditor {
        static let name = "categoryEditor.name"
        static let newCategory = "categoryEditor.newCategory"
        static let editCategory = "categoryEditor.editCategory"
        static let changeIcon = "categoryEditor.changeIcon"
        static let changeColor = "categoryEditor.changeColor"
        static let categoryHidden = "categoryEditor.categoryHidden"
        static let categoryVisible = "categoryEditor.categoryVisible"
        static let show = "categoryEditor.show"
        static let hide = "categoryEditor.hide"
        static let addCategory = "categoryEditor.addCategory"
        static let deleteCategory = "categoryEditor.deleteCategory"
        static let deleteAlertTitle = "categoryEditor.deleteAlertTitle"
        static let deleteAlertMessage = "categoryEditor.deleteAlertMessage"
        static let cancel = "categoryEditor.cancel"
        static let done = "categoryEditor.done"
        static let colorPickerTitle = "categoryEditor.colorPickerTitle"
        static let ready = "categoryEditor.ready"
        static let categoryNamePlaceholder = "categoryEditor.categoryNamePlaceholder"
        static let selectColor = "categoryEditor.selectColor"
        static let add = "categoryEditor.add"

        enum IconPicker {
            static let iconSelection = "categoryEditor.iconPicker.iconSelection"
            static let searchIcon = "categoryEditor.iconPicker.searchIcon"
        }

        enum DockBar {
            static let all = "categoryEditor.dockBar.all"
            static let workAndEducation = "categoryEditor.dockBar.workAndEducation"
            static let homeAndFamily = "categoryEditor.dockBar.homeAndFamily"
            static let creativity = "categoryEditor.dockBar.creativity"
            static let shopping = "categoryEditor.dockBar.shopping"
            static let travel = "categoryEditor.dockBar.travel"
            static let planning = "categoryEditor.dockBar.planning"
            static let communication = "categoryEditor.dockBar.communication"
            static let tools = "categoryEditor.dockBar.tools"
        }

    enum Archive {
            static let title = "archive.title"
        }
    
    enum TaskTimeLine {
        static let title = "taskTimeLine.title"
        static let categoryNotFound = "taskTimeLine.categoryNotFound"
    }


}
